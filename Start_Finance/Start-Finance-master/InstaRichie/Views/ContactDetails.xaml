        </Grid>
        <ListView x:Name="ContactListView" HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch" Height="350"
                  RelativePanel.Below="PageContent"
                  ItemTemplate="{StaticResource ContactListDatavalue}">
            -->
